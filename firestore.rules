rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id.size() > 0;
      allow delete: if isOwner(userId);

      // User Notifications
      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create, update, delete: if isAdmin();
      }
    }


    // --- JOBS ---
    match /jobs/{jobId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }


    // --- CANDIDATES ---
    match /candidates/{candidateId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }


    // --- INTERVIEWS ---
    match /interviews/{interviewId} {
      allow list: if isAdmin() || hasPrivilegedRole();
      allow get: if isAdmin() || hasPrivilegedRole()
        || (isSignedIn() && resource.data.candidateId == request.auth.uid);
      allow create, update, delete: if isAdmin() || hasPrivilegedRole();
    }


    // --- ACTIVITIES ---
    match /activities/{activityId} {
      allow read: if isAdmin() ||
        (isSignedIn() &&
          (
            (resource.data.candidateUserId != null &&
              resource.data.candidateUserId == request.auth.uid) ||
            (
              resource.data.candidateUserId == null &&
              resource.data.candidateId != null &&
              get(/databases/$(database)/documents/candidates/$(resource.data.candidateId)).data.userId
              == request.auth.uid
            )
          ));

      // Admin create
      allow create: if isAdmin();

      // Admin update/delete
      allow update, delete: if isAdmin();
    }


    // --- ADMIN ROLES ---
    match /roles_admin/{userId} {
      allow get: if true;
      allow list: if false;
      allow create, delete: if isAdmin();
      allow update: if false;
    }


    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        (
          exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
          || request.auth.token.email == "anandkumar.shinnovationco@gmail.com"
        );
    }

    function hasPrivilegedRole() {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);

      return isSignedIn() &&
        (exists(userDocPath)
          ? get(userDocPath).data.role in ['Admin', 'HR', 'Manager']
          : false);
    }
  }
}


// --- STORAGE RULES ---
service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to upload resumes only if signed in
    match /resumes/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

