rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id.size() > 0;
      allow delete: if isOwner(userId);
    }

    match /jobs/{jobId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /candidates/{candidateId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /roles_admin/{userId} {
      allow get: if true;
      allow list: if false;
      allow create, delete: if isAdmin();
      allow update: if false;
    }

    // ✅ FIXED INTERVIEWS RULE
    match /interviews/{interviewId} {
      allow read: if request.auth != null; // ✅ covers both get and list
      allow create, update, delete: if isAdmin(); // only admin can modify
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
        || request.auth.token.email == "anandkumar.shinnovationco@gmail.com";
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /resumes/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

