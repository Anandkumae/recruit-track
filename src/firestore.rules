
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id.size() > 0;
      allow delete: if isOwner(userId);
    }

    // --- JOBS ---
    match /jobs/{jobId} {
      allow get: if true;
      allow create, update, delete: if isAdmin();
    }
    match /jobs {
        allow list: if true;
    }

    // --- CANDIDATES ---
    match /candidates/{candidateId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // --- INTERVIEWS ---
    match /interviews/{interviewId} {
      allow get, write: if isAdmin() || (isSignedIn() && resource.data.candidateId == request.auth.uid);
      allow list: if isAdmin();
    }

    // --- USER NOTIFICATIONS (Subcollection of Users) ---
    match /users/{userId}/notifications/{notificationId} {
      allow read, list, write: if isOwner(userId) || isAdmin();
    }

    // --- ACTIVITIES ---
    match /activities/{activityId} {
      allow read: if isAdmin() ||
        (isSignedIn() &&
          (
            (resource.data.candidateUserId != null &&
              resource.data.candidateUserId == request.auth.uid) ||
            (
              resource.data.candidateUserId == null &&
              resource.data.candidateId != null &&
              get(/databases/$(database)/documents/candidates/$(resource.data.candidateId)).data.userId == request.auth.uid
            )
          ));
      
      // Allow admins to create activities
      allow create: if isAdmin();
      
      // Only admins can update/delete activities
      allow update, delete: if isAdmin();
    }

    // --- ADMIN ROLES ---
    match /roles_admin/{userId} {
      allow get: if true;
      allow list: if false;
      allow create, delete: if isAdmin();
      allow update: if false;
    }


    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        (exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
        || request.auth.token.email == "anandkumar.shinnovationco@gmail.com");
    }
    
    function isHR() {
      // (Optional) Replace with real HR check logic
      return hasPrivilegedRole();
    }
    
    function isManager() {
      // (Optional) Replace with real Manager check logic
      return hasPrivilegedRole();
    }

    function hasPrivilegedRole() {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);

      return isSignedIn() &&
        (exists(userDocPath)
          ? get(userDocPath).data.role in ['Admin', 'HR', 'Manager']
          : false);
    }
  }
}

// --- STORAGE RULES ---
service firebase.storage {
  match /b/{bucket}/o {
    match /resumes/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
